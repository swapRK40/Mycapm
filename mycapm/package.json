{
  "name": "mycapm",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/xssec": "^4",
    "axios": "^1.13.4",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-mycapmfiori": "cds watch --open mycapmfiori/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy mycapm --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "hana"
      },
      "uaa": {
    "kind": "xsuaa"
  },
  "auth": {
     "[production]": {
          "strategy" : "JWT"
        },
    "[development]": {
      "strategy": "mock",
      "users": {
        "saurabh": {
          "password": "Welcome",
          "roles": [
            "Admin"
          ],
          "userAttributes": {
          "Gender": ["$UNRESTRICTED"]
        }
        },
         "asthana": {
        "password": "Welcome1",
        "roles": ["Viewer"],
        "userAttributes": {
          "Gender": ["M"]
        }
      }
      }
    }}
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/mycapmfiori"
  ]
}
